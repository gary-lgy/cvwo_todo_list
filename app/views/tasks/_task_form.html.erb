<%# form to build a new task or edit and existing task %>
<%= form_with model: @task do |f| %>
  <fieldset>
    <legend>Details</legend>
    <p>
      <%= f.label :title, 'Title: ' %>
      <%= f.text_field :title, required: true %><br>
    </p>
    <p>
      <%= f.label :description, 'Description: ' %>
      <%= f.text_area :description, size: '30x5' %><br>
    </p>
    <p>
      <%= f.label :deadline, 'Deadline: ' %>
      <%= f.datetime_select :deadline %><br>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </fieldset>
<% end %>