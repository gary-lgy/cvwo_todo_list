<%# local variables: task, on_homepage %>

<%# navigational links for tasks %>

<%# ------ COMPLETE/UN-COMPLETE ------ %>
<%= link_to task.completed ? 'Uncomplete' : 'Complete',
            toggle_completed_task_path(task) %> |

<%# ------ EDIT ------ %>
<%= link_to 'Edit', edit_task_path(task) %> |

<%# ------ DELETE ------ %>
<%= link_to 'Delete', task_path(task), method: :delete,
            data: { confirm: 'Are you sure?' } %>

<%# ------ BACK ------ %>
<%# include the 'Back' button only if viewing a task %>
<% unless on_homepage %>
   | <%= link_to_tasks_path %>
<% end %>