<%# local variables: task, on_homepage %>

<%# navigational links for tasks %>

<%# ------ COMPLETE/UN-COMPLETE ------ %>
<%= link_to task.completed ? 'Uncomplete' : 'Complete',
            toggle_completed_task_path(task) %> |

<%# ------ VIEW DETAILS ------ %>
<%# include the 'View Details' button only if on homepage %>
<% if on_homepage %>
  <%= link_to 'View Details', task_path(task) %> |
<% end %>

<%# ------ EDIT ------ %>
<%= link_to 'Edit',edit_task_path(task,
      source: on_homepage ? 'index' : 'show') %> |

<%# ------ DELETE ------ %>
<%= link_to 'Delete', task_path(task), method: :delete,
            data: { confirm: 'Are you sure?' } %>

<%# ------ BACK ------ %>
<%# include the 'Back' button only if viewing a task %>
<% unless on_homepage %>
   | <%= link_to 'Back', tasks_path %>
<% end %>